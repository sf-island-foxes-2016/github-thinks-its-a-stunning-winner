<div class="product-show-container">
<h2><%=@product.name%></h2>
<div class="product-detail-container">
<img class="well" src="<%=@product.image%>"></img>
<ul>
  <li><%="Stock: #{@product.stock}"%></li>
  <li><%= "Price: $#{@product.price}" %></li>
  <li><%= link_to 'Add to cart', new_cart_product_path(product_id: @product.id) %></li>
</ul>
</div>
<div class="nav navbar">
<% if admin? %>
    <li><%= link_to 'Edit', edit_product_path %></li>
    <li><%=link_to 'Delete', product_path, method: :delete, data: { confirm: "Delete #{@product.name}?"}%></li>
<%end%>
    <li><%= link_to 'Home', root_path %></li>
  </div>
</div>
